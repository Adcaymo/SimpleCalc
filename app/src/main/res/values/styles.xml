<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- Set new styles for widgets in theme -->
        <item name="android:buttonStyle">@style/Button.Digit</item>
    </style>

    <!-- Styles applied automatically -->
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Digit">
        <item name="android:background">@color/SteelBlue</item>
    </style>

    <style name="Button.Operator">
        <item name="android:background">@color/DarkOrange</item>
    </style>

    <!-- Styles that need to be applied manually -->
</resources>
